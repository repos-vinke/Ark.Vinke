<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Product>Ark</Product>
		<Description>Ark Vinke System Core Server</Description>
		<Authors>Vinke</Authors>
		<Version>1.0.0</Version>
		<RepositoryUrl>https://github.com/repos-vinke/Ark.Vinke</RepositoryUrl>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageOutputPath>$(SolutionDir)..\..\..\Packages\</PackageOutputPath>
		<NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
		<OutputType>Library</OutputType>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\..\..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Lazy.Vinke" Version="1.0.0" />
		<PackageReference Include="Lazy.Vinke.Json" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Library" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Library.Core" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Library.Core.Server" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Framework" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Framework.Core" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Framework.Core.Data" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Framework.Core.IServer" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Framework.Core.IService" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Framework.Core.Server" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Facilities" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Facilities.Core" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Facilities.Core.Data" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Facilities.Core.IServer" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Facilities.Core.IService" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Facilities.Core.Server" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.System" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.System.Core" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.System.Core.Data" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.System.Core.IServer" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.System.Core.IService" Version="1.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Properties\SysResourcesCoreServer.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>SysResourcesCoreServer.resx</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Properties\SysResourcesCoreServer.resx">
	    <Generator>PublicResXFileCodeGenerator</Generator>
	    <LastGenOutput>SysResourcesCoreServer.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Debug' and '$(TargetFramework)' == 'net6.0'">
		<PostBuildEvent>
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\bin\Debug\net6.0\Ark.Vinke.System.Core.Server.dll %SystemDrive%%HomePath%\.nuget\Packages\ark.vinke.system.core.server\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\bin\Debug\net6.0\Ark.Vinke.System.Core.Server.dll $(SolutionDir)..\..\..\..\..\..\Debug\Both\Bin\ark.vinke.system.core.server\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\bin\Debug\net6.0\Ark.Vinke.System.Core.Server.dll $(SolutionDir)..\..\..\..\..\..\Debug\Server\Bin\ark.vinke.system.core.server\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\Resources\Languages\* $(SolutionDir)..\..\..\..\..\..\Debug\Both\Res\Languages\
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\Resources\Languages\* $(SolutionDir)..\..\..\..\..\..\Debug\Server\Res\Languages\
		</PostBuildEvent>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)' == 'Release' and '$(TargetFramework)' == 'net6.0'">
		<PostBuildEvent>
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\bin\Release\net6.0\Ark.Vinke.System.Core.Server.dll $(SolutionDir)..\..\..\..\..\..\Release\Both\Bin\ark.vinke.system.core.server\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\bin\Release\net6.0\Ark.Vinke.System.Core.Server.dll $(SolutionDir)..\..\..\..\..\..\Release\Server\Bin\ark.vinke.system.core.server\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\Resources\Languages\* $(SolutionDir)..\..\..\..\..\..\Release\Both\Res\Languages\
			xcopy /y $(SolutionDir)Ark.Vinke.System.Core.Server\Resources\Languages\* $(SolutionDir)..\..\..\..\..\..\Release\Server\Res\Languages\
		</PostBuildEvent>
	</PropertyGroup>

</Project>
