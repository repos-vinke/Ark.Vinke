<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Product>Ark</Product>
		<Description>Ark Vinke Framework Core</Description>
		<Authors>Vinke</Authors>
		<Version>1.0.0</Version>
		<RepositoryUrl>https://github.com/repos-vinke/Ark.Vinke</RepositoryUrl>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageOutputPath>$(SolutionDir)..\..\..\Packages\</PackageOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\..\..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Lazy.Vinke" Version="1.0.0" />
		<PackageReference Include="Lazy.Vinke.Json" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Library" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Library.Core" Version="1.0.0" />
		<PackageReference Include="Ark.Vinke.Framework" Version="1.0.0" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Debug' and '$(TargetFramework)' == 'net6.0'">
		<PostBuildEvent>
			xcopy /y $(SolutionDir)Ark.Vinke.Framework.Core\bin\Debug\net6.0\Ark.Vinke.Framework.Core.dll %SystemDrive%%HomePath%\.nuget\Packages\ark.vinke.framework.core\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.Framework.Core\bin\Debug\net6.0\Ark.Vinke.Framework.Core.dll $(SolutionDir)..\..\..\..\..\..\Debug\Both\Bin\ark.vinke.framework.core\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.Framework.Core\bin\Debug\net6.0\Ark.Vinke.Framework.Core.dll $(SolutionDir)..\..\..\..\..\..\Debug\Client\Bin\ark.vinke.framework.core\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.Framework.Core\bin\Debug\net6.0\Ark.Vinke.Framework.Core.dll $(SolutionDir)..\..\..\..\..\..\Debug\Server\Bin\ark.vinke.framework.core\1.0.0\lib\net6.0\
		</PostBuildEvent>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)' == 'Release' and '$(TargetFramework)' == 'net6.0'">
		<PostBuildEvent>
			xcopy /y $(SolutionDir)Ark.Vinke.Framework.Core\bin\Release\net6.0\Ark.Vinke.Framework.Core.dll $(SolutionDir)..\..\..\..\..\..\Release\Both\Bin\ark.vinke.framework.core\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.Framework.Core\bin\Release\net6.0\Ark.Vinke.Framework.Core.dll $(SolutionDir)..\..\..\..\..\..\Release\Client\Bin\ark.vinke.framework.core\1.0.0\lib\net6.0\
			xcopy /y $(SolutionDir)Ark.Vinke.Framework.Core\bin\Release\net6.0\Ark.Vinke.Framework.Core.dll $(SolutionDir)..\..\..\..\..\..\Release\Server\Bin\ark.vinke.framework.core\1.0.0\lib\net6.0\
		</PostBuildEvent>
	</PropertyGroup>

</Project>
